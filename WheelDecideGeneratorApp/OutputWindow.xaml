<Window x:Class="WheelDecideGeneratorApp.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelDecideGeneratorApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Output" Height="400" Width="250">
    <Grid Margin="5">
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom">
                <StackPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Margin" Value="0,4"/>
                    </Style>
                </StackPanel.Resources>
                <StackPanel>
                    <TextBlock Text="Background values"/>
                    <TextBox x:Name="BackgroundTextBox" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Text values"/>
                    <TextBox x:Name="TextTextBox" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Weight values"/>
                    <TextBox x:Name="WeightTextBox" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="URL"/>
                    <TextBox x:Name="URLTextBox" IsReadOnly="True"/>
                </StackPanel>
                <StackPanel>
                    <Button x:Name="CloseButton" HorizontalAlignment="Right" Width="100" Content="Close" Click="CloseButton_Click"/>
                </StackPanel>
            </StackPanel>
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Values"/>
                <TextBox x:Name="ValuesTextBox" IsReadOnly="True"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
