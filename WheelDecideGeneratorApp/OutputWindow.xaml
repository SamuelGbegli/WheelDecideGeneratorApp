<Window x:Class="WheelDecideGeneratorApp.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelDecideGeneratorApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Output" Height="225" Width="450">
    <Grid Margin="5">
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="Margin" Value="4"/>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="80"/>
                    <Setter Property="Margin" Value="4,0"/>
                </Style>
            </StackPanel.Resources>
            <StackPanel>
                <Label Content="Copy link"/>
                <DockPanel>
                    <Button Name="CopyLinkButton"
                            DockPanel.Dock="Right"
                            Content="Copy" Click="CopyLinkButton_Click"/>
                    <TextBox Name="URLTextBox" IsReadOnly="True"/>
                </DockPanel>
            </StackPanel>

            <StackPanel>
                <Label Content="Copy values"/>
                <DockPanel>
                    <Button Name="CopyValueButton"
                            DockPanel.Dock="Right"
                            Content="Copy" Click="CopyValueButton_Click"/>
                    <ComboBox Name="ValueComboBox" SelectedIndex="0">
                        <ComboBoxItem Content="Values"/>
                        <ComboBoxItem Content="Background colours"/>
                        <ComboBoxItem Content="Text colours"/>
                        <ComboBoxItem Content="Weights"/>
                    </ComboBox>
                </DockPanel>
            </StackPanel>
            <Button x:Name="CloseButton" HorizontalAlignment="Right" Width="100" Content="Close" Click="CloseButton_Click" Margin="24"/>
        </StackPanel>
    </Grid>
</Window>
