<UserControl x:Class="WheelDecideGeneratorApp.TextPreviewAndCopyButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WheelDecideGeneratorApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Name="CopyButton" Content="Copy" HorizontalAlignment="Right" Width="100" Margin="8" Click="CopyButton_Click"/>
        <TextBox Name="ValuesTextBox" IsReadOnly="True"/>
    </DockPanel>
</UserControl>
